<% include partials/header %>

<div class="container">
  <div class="alert alert-light" role="alert">
    <h4 class="alert-heading">Update Blog</h4>
    <p>Update the blog title, Image Url and the blog content.</p>
    <hr>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="form-group">
          <label for="input-title">Blog Title</label>
          <input type="text" id="input-title" class="form-control" name="blog[title]" value="<%= blog.title %>">
      </div>
      <div class="form-group">
          <label for="input-url">Image URL</label>
          <input type="url" id="input-url" class="form-control" name="blog[image]" value="<%= blog.image %>">
      </div>
      <div class="form-group">
          <label for="input-body">Blog Content</label>
          <textarea class="form-control" id="input-body" name="blog[body]"><%= blog.body %></textarea>
      </div>
      <input class="btn btn-outline-dark" type="submit">
    </form>  
  </div>
</div>

<% include partials/footer %>