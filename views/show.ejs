<% include partials/header %>

<div class="container">
  <div class="spacer">
    <div class="card mb-3 mt-3 bg-dark">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="<%= blog.image %>" class="card-img">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <a class="card-title" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
            <p class="card-text"><%- blog.body %></p>
            <div class="row">
              <form id="edit" action="/blogs/<%= blog._id %>/edit" method="GET">
                <button class="btn btn-outline-light">Edit <i class="far fa-arrow-alt-circle-right"></i></button>
              </form>
              <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>
          <p class="card-text"><small class="text-muted"><%= blog.created.toDateString() %></small></p>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>